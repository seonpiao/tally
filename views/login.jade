extends layout
block append head
  title 记账
  link(type="text/css",rel="stylesheet",href="/css/login.css")

block append content
  div.cover
  div.panel              
    h1.title 轻松记账
    form(method="POST",action="/login" id="login_form")
      div.user
        input(placeholder="用户名",name="name")
      div.password
        input(type="password",placeholder="密码",name="passwd")
      div.submit
        a.button(href="#",onclick="document.getElementById('login_form').submit()") 确定

block append footer
  script(type='text/javascript',src="/js/login/main.js")
