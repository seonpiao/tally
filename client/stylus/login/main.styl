@import '../common/base'
@import 'modules'

html
  height:100%
  body
    height:100%
    width:100%
    position:relative
    overflow:hidden
    .main
      height:100%
      .cover
        background:url(/image/bg.jpg)
        background-position:-130px -50px
        background-size:180%
        width:100%
        height:100%
        position:absolute
        -webkit-filter:blur(0px)
      .panel
        $mainHeight = 280px
        $padding=40px
        height:$mainHeight
        position:absolute
        top:50%
        padding:30px 0 50px 0
        text-align:center
        margin-top:-($mainHeight/2 + $padding)
        width:100%
        background:rgba(0,0,0,.0)
        .password,.user,.submit,.title
          height:($mainHeight/4)
          line-height:($mainHeight/4)
          text-align:center
        .title
          font-size:36px
          color:rgba(255,255,255,.6)
          font-weight:normal
        .user,.password
          input
            width:70%
            font-size:16px
            padding:15px
            line-height:24px
            background:rgba(white,.6)
            border:1px solid rgba(black,.4)
            border-radius(3px)
            color:rgba(0,0,0,.8)
            outline:0
            &::-webkit-input-placeholder
              color:rgba(0,0,0,.5)
            &:focus
              background:rgba(white,.8)
              box-shadow(inset 0 0 1px white)
        .submit
          .button
            font-size:18px
            width:70%
            padding:15px
            line-height:24px
            border:1px solid rgba($themeColor,.9)
            background:rgba($themeColor,.9)
            display:inline-block
            color:rgba(255,255,255,.8)
            border-radius(3px)
            &:active
              background:darken(@background,30%)