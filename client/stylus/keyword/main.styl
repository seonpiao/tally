@import '../common/base'
@import 'modules'
.keywords
  padding:10px 0
  margin-bottom:80px
  display:-webkit-inline-flex
  -webkit-flex-flow: row wrap
  // -webkit-justify-content:space-between
  .item
    -webkit-flex:auto
    display:inline-block
    padding:6px 8px
    margin 5px
    text-align:center
    border:1px solid lighten($themeColor,20%)
    border-radius(3px)
.custom
  text-align:center
  position:fixed
  bottom:20px
  width:300px
  input
    width:80px
    margin-right:6px
    font-size:16px
    padding:8px
    line-height:24px
    border:1px solid rgba(black,.4)
    border-radius(3px)
    color:rgba(0,0,0,.8)
    outline:0
  select
    font-size:16px
    padding:8px
    height:42px
    vertical-align:top
    margin-right:6px