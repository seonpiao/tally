@import '../common/base'
@import 'modules'
.keywords
  padding:10px 0
  margin-bottom:10px
  display:-webkit-inline-flex
  -webkit-flex-flow: row wrap
  // -webkit-justify-content:space-between
  .item
    -webkit-flex:auto
    display:inline-block
    padding:6px 8px
    margin 5px
    text-align:center
    border:1px solid lighten($themeColor,20%)
    border-radius(3px)
    font-size:20px
  .plugin
    -webkit-flex:auto
    display:inline-block
    padding:1px 8px
    margin 5px
    text-align:center
    a
      font-size:30px