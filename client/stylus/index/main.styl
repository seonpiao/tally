@import '../common/base'
@import 'modules'

html
  height:100%
  body
    height:100%
    width:100%
    position:relative
    overflow:hidden
    .main
      height:100%
      .cover
        background:url(/image/bg.jpg)
        width:100%
        height:100%
        position:absolute
        -webkit-filter:blur(0px)
      .panel
        $mainHeight = 270px
        $padding=0px
        height:$mainHeight
        position:absolute
        top:50%
        text-align:center
        margin-top:-($mainHeight/2 + $padding)
        width:100%
        p
          height:($mainHeight/3)
          line-height:($mainHeight/3)
          text-align:center
          &.h1
            font-size:48px
          &.h2
            font-size:36px
          &.h3
            font-size:24px