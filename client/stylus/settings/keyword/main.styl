@import '../../common/base'
@import 'modules'
.keywords
  padding-bottom:10px
  .item
    display:block
    padding:10px
    border-bottom:1px solid lighten($themeColor,50%)
    margin:10px 0
    position:relative
    border-radius(3px)
    color:$textColor
    strong
      font-size:16px
      display:inline-block
      width:140px
      color:$secondThemeColor
    .del
      position:absolute
      top:8px
      right:0